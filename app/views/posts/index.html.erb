<div class="container">
  <h1>Posts</h1>
  <p id="notice"><%= notice %></p>

  <div class="box">

 
    

    
        <% @posts.each do |post| %>
            <h3>Content:</h3>
            <% if member_signed_in? %>
            <p> Author: <%= post.member.name %>  </p>
            <% else %>
            <p> Author: (login to see author) </p>
            <% end %>
            <p> <%= post.post %> </p> 
            <% if member_signed_in? %>
              <%= link_to 'Show', post %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
        <% end %>
 

    
    
    
  </div>
<%= link_to 'New Post', new_post_path %>
</div>