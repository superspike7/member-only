<div class="lg:w-1/2 mx-auto mt-10">
<%= link_to 'New Post', new_post_path, class: "px-3 py-2 bg-red-500 mx-auto " %>
 <p id="notice"><%= notice %></p>

  <div class="flex flex-col">
        <% @posts.each do |post| %>
        <div class="shadow-xl h-32 p-5  mx-5">
            <% if member_signed_in? %>
            <p class="text-xl font-bold"> Author: <%= post.member.name %>  </p>
            <% else %>
            <p class="text-xl font-bold"> Author: Anonymous</p>
            <% end %>
            <p class="font-md" > <%= post.post %> </p> 
            <% if member_signed_in? %>
              <%= link_to 'Show', post %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
        </div>
        <% end %>
  </div>
</div>