<div class="w-1/2 mx-auto my-10 ">
<h2 class="text-center text-2xl font-bold">Sign Up</h2>

<div class="flex items-center justify-center mx-auto">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-3 mx-auto">
    <%= f.label :name, class:"text-gray-700 text-xl font-light"%><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, class:"bg-white border border-blue-500 rounded-md focus:ring-2 focus:ring-blue-700 outline-none p-2" %>
  </div>

  <div class="my-3">

    <%= f.label :email, class:"text-gray-700 text-xl font-light" %><br />
    <%= f.email_field :email, autocomplete: "email",  class:"bg-white border border-blue-500 rounded-md focus:ring-2 focus:ring-blue-700 outline-none p-2"%>
  </div>

  <div class="my-3">
    <%= f.label :password, class:"text-gray-700 text-xl font-light" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"bg-white border border-blue-500 rounded-md focus:ring-2 focus:ring-blue-700 outline-none p-2" %>
  </div>

  <div class="my-3">
    <%= f.label :password_confirmation, class:"text-gray-700 text-xl font-light" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"bg-white border border-blue-500 rounded-md focus:ring-2 focus:ring-blue-700 outline-none p-2" %>
  </div>

  <div class="my-3">
    <%= f.submit "Sign up" , class:"text-lg font-md py-1 px-6 text-white bg-red-500 hover:bg-red-800 cursor-pointer" %>
  </div>
<% end %>

  </div>
  <div class="w-60 mx-auto">
    <%= render "devise/shared/links" %>
  </div>
</div>